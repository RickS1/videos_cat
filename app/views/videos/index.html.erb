<p id="notice"><%= notice %></p>

<h1>Listing Videos</h1>

<table>
  <thead>
    <tr>
			<th>Título</th>
			<th>Fecha de subida</th>
			<th>Liga</th>
			<th>Tipo de video</th>
			<th>Curso breve</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @videos.each do |v| %>
      <tr>
				<td><%= v.titulo %></td>
				<td><%= v.fecha %></td>
				<td><%= v.liga %></td>
				<td><%= v.tipo %></td>
				<td><%= v.curso %></td>
        <td><%= link_to 'Show', v %></td>
        <td><%= link_to 'Edit', edit_video_path(v) %></td>
        <td><%= link_to 'Destroy', v, method: :delete, data: { confirm: '¿Desea eliminar este video?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Video', new_video_path %>
