<script type="text/javascript">
function moverFondo(element){
	var containerWidth = element.innerWidth(),  
		  containerHeight = element.innerHeight(),
		  mousePositionX = (event.pageX / containerWidth) * 100,
		  mousePositionY = (event.pageY /containerHeight) * 100;

	element.css('background-position', mousePositionX + '%' + ' ' + mousePositionY + '%');

}
</script>

<div id="inicio" style="height:100%;width:100%;position:fixed;top:0;left:0;">
	<div id="contenedor" style="width:90%; height:85%;margin:auto;overflow:hidden;position:relative;background:url(<%= image_path('Paisaje.png') %>) no-repeat 110% 110% / 110% 110%" onmousemove="moverFondo($(this));">
	</div>
</div>


