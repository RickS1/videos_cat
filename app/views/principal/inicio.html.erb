<script type="text/javascript">
function moverFondo(event,element){
	var containerWidth = element.innerWidth()*1.15,  
		  containerHeight = element.innerHeight()*1.15,
		  mousePositionX = (event.pageX / containerWidth) * 100,
		  mousePositionY = (event.pageY /containerHeight) * 100;

	element.css('background-position', mousePositionX + '%' + ' ' + mousePositionY + '%');
}

function cambiarHamburguesa(toggle){
	var clase = document.getElementById("menu_canvas").className;
	if((toggle == 0 && clase == "hov") || (toggle == 1 && clase == "far")) return false;
	document.getElementById("menu_canvas").className = (toggle == 0 ? "hov" : "far" );
}
</script>
<style>
.far {	
				-webkit-animation: converge 3.8s linear 0s 1 forwards;
				-moz-animation: converge 3.8s linear 0s 1 forwards;
				animation: converge 3.8s linear 0s 1 forwards; 
}
.hov {
				-webkit-animation: converge 1.8s linear 0s 1 reverse;
				-moz-animation: converge 1.8s linear 0s 1 reverse;
				animation: converge 1.8s linear 0s 1 reverse; 
}

@-webkit-keyframes converge {
	from { clip-path: url(#hamburguesa); }
	to { clip-path: url(#hamb_hover); }
}

@-moz-keyframes converge {
	from { clip-path: url(#hamburguesa); }
	to { clip-path: url(#hamb_hover); }
}

@-o-keyframes converge {
	from { clip-path: url(#hamburguesa); }
	to { clip-path: url(#hamb_hover); }
}

@keyframes converge {
	from { clip-path: url(#hamburguesa); }
	to { clip-path: url(#hamb_hover); }
}
</style>

<svg height="0" width="0">
  <defs>
    <clipPath id="hamburguesa">
      <rect y="65" x="45" width="90" height="8"/>
      <rect x="45" y="85" width="90" height="8"/>
      <rect x="45" y="105" width="90" height="8"/>
    </clipPath>
		<clipPath id="hamb_hover">
			<rect x="45" y="85" width="90" height="8"/>
			<rect x="45" y="85" width="90" height="8"/>
			<rect x="45" y="85" width="90" height="8"/>
		</clipPath>
  </defs>
</svg>
<div id="inicio" style="height:100%;width:100%;position:fixed;top:0;left:0;">
	<div id="contenedor" style="width:90%; height:85%;margin:auto;overflow:hidden;position:absolute;top:50%;left:50%;transform:translate(-50%,-50%);z-index:2;background:url(<%= image_path('Paisaje.png') %>) no-repeat center center / 120% 120%" onmousemove="moverFondo(event,$(this));">
	</div>
	<div id="brand" style="height:130px;width:130px;position:absolute;top:17%;left:2.5%;z-index:4;background:url(<%= image_path('pine.jpg') %>) no-repeat center center / 120% 120%">
	</div>
	<div id="menu_canvas" style="background-color:#CCC;height:180px;width:180px;position:absolute;top:17%;right:10%;transition:all ease 0.5s;-webkit-transition:all ease 0.5s;-moz-transition:all ease 0.5s;-o-transition:all ease 0.5s;z-index:4;">
	</div>

	<div id="menu_trans" style="background-color:rgba(255,255,255,0.0);height:180px;width:180px;position:absolute;top:17%;right:10%;z-index:5;" onmouseover="cambiarHamburguesa(0);" onmouseout="cambiarHamburguesa(1);">

	</div>
</div>


